<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resetPWActivity"
    android:background="@drawable/greetingimage"
    android:id="@+id/view_resetpw">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="25mm"
        android:layout_marginLeft="10mm">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget your account or password?"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/resetpw_button_account"
                android:layout_width="15mm"
                android:layout_height="10mm"
                android:layout_marginTop="4mm"
                android:layout_marginLeft="0mm"
                android:background="@drawable/login_button_color"
                android:text="Forget Account"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"/>
            <Button
                android:id="@+id/resetpw_button_password"
                android:layout_width="15mm"
                android:layout_height="10mm"
                android:layout_marginTop="4mm"
                android:layout_marginLeft="5mm"
                android:background="@drawable/login_button_color"
                android:text="Forget Password"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>